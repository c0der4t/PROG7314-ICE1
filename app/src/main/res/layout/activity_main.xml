<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/brokenmap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblSrcCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Source Country" />

                <Spinner
                    android:id="@+id/spnSourceCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblSrcCurr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Source Curr" />

                <Spinner
                    android:id="@+id/spnSourceCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnSwap"
                android:background="@drawable/btn_hex_gold_ripple"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:padding="0dp"
                android:text="â‡…"
                android:textColor="@android:color/white"
                android:textSize="13sp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblDstCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dest Country" />

                <Spinner
                    android:id="@+id/spnDestCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblDestCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dest Curr" />

                <Spinner
                    android:id="@+id/spnDestCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblSrcAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Source Amount"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/edtSourceAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g. 1000.00"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblDestAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Destination Amount"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/edtDestAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g. 17459.00"
                android:inputType="numberDecimal" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>